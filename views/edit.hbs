<section id="edit-page">
  <div class="editSection">
    <div class="info">
      <h2>Edit your own post!</h2>
    </div>

    <form action="/edit/{{post._id}}" method="POST" class="editForm">
      <h2>Edit Post</h2>
      <ul class="noBullet">
        <li>
          <label for="title">Title:</label>
          <input
            type="text"
            class="inputFields"
            id="title"
            name="title"
            value="{{post.title}}"
          />
        </li>

        {{#if errors.title}}
          <p class="error">{{errors.title}}</p>
        {{/if}}

        <li>
          <label for="key-word">Keyword:</label>
          <input
            type="text"
            class="inputFields"
            id="keyword"
            name="keyword"
            value="{{post.keyword}}"
          />
        </li>

        {{#if errors.keyword}}
          <p class="error">{{errors.keyword}}</p>
        {{/if}}

        <li>
          <label for="location">Location:</label>
          <input
            type="text"
            class="inputFields"
            id="location"
            name="location"
            value="{{post.location}}"
          />
        </li>

        {{#if errors.location}}
          <p class="error">{{errors.location}}</p>
        {{/if}}

        <li>
          <label for="date">Date of creation:</label>
          <input
            type="text"
            class="inputFields"
            id="date"
            name="creationDate"
            value="{{post.creationDate}}"
          />
        </li>

        {{#if errors.creationDate}}
          <p class="error">{{errors.creationDate}}</p>
        {{/if}}

        <li>
          <label for="image">Wildlife image:</label>
          <input
            type="text"
            class="inputFields"
            id="image"
            name="imageUrl"
            value="{{post.imageUrl}}"
          />
        </li>

        {{#if errors.imageUrl}}
          <p class="error">{{errors.imageUrl}}</p>
        {{/if}}

        <li>
          <label for="description">Description:</label>
          <textarea
            id="description"
            class="inputFields"
            name="description"
          >{{post.description}}</textarea>
        </li>

        {{#if errors.description}}
          <p class="error">{{errors.description}}</p>
        {{/if}}

        <li id="center-btn">
          <button id="edit-btn">Edit</button>
        </li>
      </ul>
    </form>

  </div>
</section>